{
    "compilerOptions": {
        "target": "ESNext",
        "outDir": "dist",
        "sourceMap": true,
        "module": "CommonJS",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "removeComments": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        }
    },
    "exclude": [
        "dist",
        "node_modules"
    ]
}